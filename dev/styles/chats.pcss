.chats {
  width: 32%;
  height: 100%;
  border-right: 2px solid var(--main-background);
  padding-top: 2px;
}

.chat__list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  overflow: auto;
  width: 100%;
  height: 100%;
  list-style: none;
}

.chat__list--history {
  justify-content: flex-end;
  height: auto;
}
