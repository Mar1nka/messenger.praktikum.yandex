@import "colors.pcss";

.main-error {
  align-items: center;

  &__header-wrapper {
    width: 100%;
    height: 120px;
    margin-bottom: 20px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: var(--main-background);
    border-radius: 40px;
  }

  &__header {
    padding: 20px;
  }

  &__description {
    padding: 20px;
  }

  &__link {
    font-size: 13px;
  }
}
